<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--나만을 위한 추천-->

    <ImageView
        android:id="@+id/iv_home_main_card_mix_album"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="150dp"
        android:layout_height="199dp"
        android:background="@drawable/img_home_main_card_mix_album"/>

    <ImageView
        android:id="@+id/iv_home_main_card_mix_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/iv_home_main_card_mix_album"
        app:layout_constraintTop_toTopOf="@+id/iv_home_main_card_mix_album"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_spotify_lime_16" />

    <TextView
        android:id="@+id/tv_home_main_card_mix_theme"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:text="Favorites"
        android:layout_marginTop="6dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_home_main_card_mix_logo" />

    <TextView
        android:id="@+id/tv_home_main_card_mix_mix"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:text="Mix"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_main_card_mix_theme" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:background="@color/blue10"
        android:paddingHorizontal="4dp"
        android:paddingVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/iv_home_main_card_mix_album"
        app:layout_constraintBottom_toBottomOf="@+id/iv_home_main_card_mix_album">

        <TextView
            android:id="@+id/tv_home_main_card_mix_artist"
            android:layout_width="133dp"
            android:layout_height="30dp"
            android:text="LE SSERAFIM,  ILLIT, (여자) 아이들, BABY MONSTER,..."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>