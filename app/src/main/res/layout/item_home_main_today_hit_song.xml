<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="16dp">

    <!--오늘의 최고 히트곡-->

    <ImageView
        android:id="@+id/iv_home_main_today_hit_song_album"
        android:layout_width="142dp"
        android:layout_height="142dp"
        app:srcCompat="@drawable/img_home_main_today_hit_song_album" />

    <TextView
        android:id="@+id/tv_home_main_today_hit_song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:theme="@style/TextAppearance.Spotify.Body.Regular_en"
        tools:text="Magnetic" />

    <TextView
        android:id="@+id/tv_home_main_today_hit_song_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TextAppearance.Spotify.Body.Regular_kr"
        tools:text="ILLIT" />

</LinearLayout>