<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_number"
        android:theme="@style/TextAppearance.Spotify.Body.regular_en_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        app:layout_constraintTop_toTopOf="@id/iv_chart_topper"
        app:layout_constraintBottom_toBottomOf="@id/iv_chart_topper"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        />
    
    <ImageView
        android:id="@+id/iv_chart_topper"
        android:layout_width="44dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/img_bruno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginVertical="9sp"
        />

    <TextView
        android:id="@+id/tv_title"
        android:theme="@style/TextAppearance.Spotify.Body.Medium_en2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Just the Way You Are"
        app:layout_constraintTop_toTopOf="@id/iv_chart_topper"
        app:layout_constraintStart_toEndOf="@id/iv_chart_topper"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        />

    <TextView
        android:id="@+id/tv_like"
        android:theme="@style/TextAppearance.Spotify.Body.Regular_en"
        android:textColor="@color/gray30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2,022,950,208"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        android:includeFontPadding="false"
        />

    <ImageView
        android:id="@+id/btn_ellipsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ellipsis_gray_44"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_chart_topper"
        app:layout_constraintBottom_toBottomOf="@id/iv_chart_topper"
        android:layout_marginEnd="3dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>