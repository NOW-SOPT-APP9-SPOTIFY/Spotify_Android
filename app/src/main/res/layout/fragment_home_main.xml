<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_home_main_card_mix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="나만을 위한 추천"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_main_card_mix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_main_card_mix"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_home_main_card_mix" />

    <TextView
        android:id="@+id/tv_home_main_btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="오늘의 최고 히트곡"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_home_main_card_mix" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_main_btn5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_home_main_btn5"
        tools:listitem="@layout/item_home_main_btn5" />

    <TextView
        android:id="@+id/tv_home_main_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인기 아티스트"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/rv_home_main_btn5"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_main_btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_home_main_btn1"
        tools:listitem="@layout/item_home_main_btn1" />

    <TextView
        android:id="@+id/tv_home_main_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 재생한 항목"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/rv_home_main_btn1"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_main_btn4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_main_btn4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_home_main_btn4" />

    <TextView
        android:id="@+id/tv_home_main_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="들어볼만한 Show"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/rv_home_main_btn4"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_main_btn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_main_btn3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_home_main_btn3" />

    <TextView
        android:id="@+id/tv_home_main_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인기 라디오"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/rv_home_main_btn3"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_main_btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_main_btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_home_main_btn2" />

</androidx.constraintlayout.widget.ConstraintLayout>
