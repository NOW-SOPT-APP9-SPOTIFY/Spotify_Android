<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homePreferenceFragment">
    <fragment
        android:id="@+id/homePreferenceFragment"
        android:name="com.nowsopt.spotify.presentation.main.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_navigation_to_musicDetailFragment"
            app:destination="@id/musicDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/musicDetailFragment"
        android:name="com.nowsopt.spotify.presentation.main.home.MusicDetailFragment"
        android:label="MusicDetail"
        tools:layout="@layout/fragment_music_detail" />
</navigation>
